# Grafana Cloud Configuration
# Copy this file to .env and fill in your credentials

# Grafana Cloud Metrics (Prometheus)
GRAFANA_CLOUD_PROMETHEUS_URL=https://prometheus-prod-XX-prod-XX-XX.grafana.net/api/prom/push
GRAFANA_CLOUD_PROMETHEUS_USER=123456

# Grafana Cloud Logs (Loki)  
GRAFANA_CLOUD_LOKI_URL=https://logs-prod-XX.grafana.net/loki/api/v1/push
GRAFANA_CLOUD_LOKI_USER=123456

# Grafana Cloud Traces (Tempo) - Optional
GRAFANA_CLOUD_OTLP_ENDPOINT=https://otlp-gateway-prod-XX-prod-XX-XX.grafana.net/otlp
GRAFANA_CLOUD_OTLP_USER=123456

# Shared API Key for authentication
GRAFANA_CLOUD_API_KEY=your_api_key_here

# Optional: Tenant ID for multi-tenancy
GRAFANA_CLOUD_TENANT_ID=your_tenant_id

